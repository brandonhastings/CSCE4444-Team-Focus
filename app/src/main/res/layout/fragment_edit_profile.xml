<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhastings.workoutwithfriends.ProfileFragment"
    android:background="@drawable/spinning">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="       Edit Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView55"
            android:textStyle="bold"
            android:textSize="20pt"
            android:textColor="@color/colorAccent1"/>

        <TextView
            android:text="___________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView56"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/etFirstName"
            android:hint="First Name"
            android:textColorHint="@color/colorAccent1"/>


        <TextView
            android:text="___________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView57"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etLastName"
            android:hint="Last Name"
            android:textColorHint="@color/colorAccent1"/>

        <TextView
            android:text="___________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView58"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/etAge"
            android:hint="Age"
            android:textColorHint="@color/colorAccent1"/>

        <TextView
            android:text="___________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView59"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/etWeight"
            android:hint="Weight"
            android:textColorHint="@color/colorAccent1"/>

        <TextView
            android:text="___________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView60"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/etHeight"
            android:hint="Height"
            android:textColorHint="@color/colorAccent1"/>

        <TextView
            android:text="___________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView61"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/etBio"
            android:hint="Bio"
            android:textColorHint="@color/colorAccent1"/>

        <TextView
            android:text="___________________________________________________________"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView62"
            android:textColor="@color/colorAccent"/>

        <Button
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bSave"
            style="@android:style/Widget.Button.Inset" />

        <Button
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bCancelEditProfile"
            style="@android:style/Widget.Button.Inset" />


    </LinearLayout>
</ScrollView>

