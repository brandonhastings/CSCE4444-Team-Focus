<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhastings.workoutwithfriends.DietStatsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:id="@+id/graphWorkout"
            android:layout_height="300dp">

        </com.jjoe64.graphview.GraphView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:text="Here are your stats for the following week:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMessage"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:text=" Average Calorie Intake (Daily)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAvgDailyIntake"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAverageIntakeValue"
            android:text="2000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:text=" Average Calories Burned (Daily)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAverageCaloriesBurned"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAvgCaloriesBurnedValue"
            android:text="1250" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:text="Back to Stats Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bBackToStatsDiet" />
    </LinearLayout>

</ScrollView>
