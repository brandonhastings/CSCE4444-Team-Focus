<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhastings.workoutwithfriends.DietFragment"
    android:background="@android:color/background_light">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:layout_width="200dp">

            <TextView
                android:text="Breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvBreakfastHeader"
                android:textSize="30sp" />

            <TextView
                android:text="Total Calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubHeader1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etBreakfastCalories" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />

            <TextView
                android:text="Lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvLunchHeader"
                android:textSize="30sp" />

            <TextView
                android:text="Total Calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubHeader2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etLunchCalories" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />

            <TextView
                android:text="Dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDinnerHeader"
                android:textSize="30sp" />

            <TextView
                android:text="Total Calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSubHeader3" />

            <TextView
                android:layout_width="match_parent"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etDinnerCalories"
                android:layout_height="50dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />

            <TextView
                android:text="Snacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSnacksHeader"
                android:textSize="30sp" />

            <TextView
                android:text="Total Calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/textView12" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="185dp"
                android:layout_height="172dp"
                android:id="@+id/ivBreakfast" />

            <ImageView
                android:layout_width="185dp"
                android:layout_height="172dp"
                android:id="@+id/ivLunch" />

            <ImageView
                android:layout_width="185dp"
                android:layout_height="172dp"
                android:id="@+id/ivDinner" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/ivSnacks" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
