<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhastings.workoutwithfriends.FriendProfileFragment"
    android:background="@drawable/weights_background">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/ivProfilePic"
            android:src="@drawable/no_pic"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:text="Unfollow"
            android:layout_height="wrap_content"
            android:id="@+id/bRemoveFriend"
            style="@android:style/Widget.Button"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textAlignment="center"
            android:layout_width="250dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="14sp"
            android:id="@+id/etName" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameFriend"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="14sp"
            android:id="@+id/etAge" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAgeFriend"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight:"
            android:textSize="14sp"
            android:id="@+id/etWeight" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeightFriend"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height:"
            android:textSize="14sp"
            android:id="@+id/etHeight"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHeightFriend"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio:"
            android:textSize="14sp"
            android:id="@+id/etBio" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvBioFriend"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workouts:"
            android:textSize="14sp"
            android:id="@+id/etWorkouts" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:id="@+id/lvProfileWorkouts" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="View Followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bViewFollowers"
            style="@android:style/Widget.Button.Inset" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView44" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Diet Stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bFriendDietStats"
                style="@android:style/Widget.Button.Inset"
                android:layout_weight="1" />

            <Button
                android:text="Workout Stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bViewFriendWorkoutStats"
                style="@android:style/Widget.Button.Inset"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>

</ScrollView>
