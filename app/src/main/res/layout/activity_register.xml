<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bhastings.workoutwithfriends.RegisterActivity"
    android:background="@drawable/spinning">


    <TextView
        android:text="_______________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView47"
        android:layout_above="@+id/etReEnterPassword"
        android:layout_alignStart="@+id/etReEnterPassword"
        android:textColor="@color/colorAccent1"/>

    <TextView
        android:text="_______________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView46"
        android:layout_above="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:textColor="@color/colorAccent1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etReEnterPassword"
        android:hint="Confirm Password"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/bRegister"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/colorAccent1"
        android:textColor="?attr/colorBackgroundFloating" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bRegister"
        android:onClick="userReg"
        style="@android:style/Widget.Button.Inset"
        android:layout_marginBottom="104dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etReEnterPassword"
        android:layout_alignEnd="@+id/textView47" />

    <TextView
        android:text="_______________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView49"
        android:layout_alignBottom="@+id/etReEnterPassword"
        android:layout_alignStart="@+id/etReEnterPassword"
        android:textColor="@color/colorAccent1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etLastName"
        android:hint="Last Name"
        android:layout_above="@+id/etPassword"
        android:layout_alignStart="@+id/textView46"
        android:textColorHint="@color/colorAccent1"
        android:textColor="?attr/colorBackgroundFloating" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etFirstName"
        android:hint="First Name"
        android:layout_above="@+id/etLastName"
        android:layout_alignStart="@+id/etLastName"
        android:textColorHint="@color/colorAccent1"
        android:textColor="?attr/colorBackgroundFloating" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="20"
        android:id="@+id/etUsername"
        android:hint="Username"
        android:layout_above="@+id/etFirstName"
        android:layout_alignStart="@+id/etFirstName"
        android:layout_alignEnd="@+id/etFirstName"
        android:textColorHint="@color/colorAccent1"
        android:textColor="?attr/colorBackgroundFloating" />

    <TextView
        android:text="_______________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView48"
        android:layout_above="@+id/etLastName"
        android:layout_alignStart="@+id/etFirstName"
        android:textColor="@color/colorAccent1"/>

    <TextView
        android:text="_______________________________"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView45"
        android:layout_above="@+id/etFirstName"
        android:layout_alignStart="@+id/etUsername"
        android:textColor="@color/colorAccent1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:layout_above="@+id/etReEnterPassword"
        android:layout_alignStart="@+id/textView47"
        android:textColorHint="@color/colorAccent1"
        android:textColor="?attr/colorBackgroundFloating" />

    <TextView
        android:text="By signing up, you agree to our Terms of Service and Privacy Policy."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etReEnterPassword"
        android:layout_alignStart="@+id/bRegister"
        android:layout_marginTop="53dp"
        android:id="@+id/textView50"
        android:layout_alignEnd="@+id/bRegister"
        android:textColor="@color/colorAccent1"/>


</RelativeLayout>
