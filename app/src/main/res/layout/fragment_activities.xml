<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhastings.workoutwithfriends.ProfileFragment"
    android:background="@android:color/background_light">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

         />

        <TextView
            android:text="Welcome to the Activities Center!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMessage1"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:text="Create your own workout or add exercises for your workouts!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMessage2"
            android:textSize="18sp"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="279dp"
            android:layout_height="100dp"
            android:id="@+id/ivNewWorkoutImage"
            android:src="@drawable/workouts"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:text="New Workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bNewWorkout"
            style="@android:style/Widget.Button.Inset"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:text="Your Workouts:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvWorkoutsHeader" />


        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lvWorkouts"
            android:layout_height="323dp" />


    </LinearLayout>
</ScrollView>
