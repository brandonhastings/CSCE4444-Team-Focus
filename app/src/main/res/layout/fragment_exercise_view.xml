<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhastings.workoutwithfriends.ProfileFragment"
    android:background="@android:color/background_light">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        />

        <TextView
            android:text="Exercise Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHeader"
            android:textAlignment="center"
            android:textSize="32sp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/ivNewWorkoutImage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/CaloriesBurnedheader"
            android:hint="Calories Burned"
            android:textSize="28sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etTime"
            android:hint="Exercise Time Lenth (minutes)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="24sp" />

        <TextView
            android:text="120lbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv120" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tv120"
            android:textSize="24sp" />

        <TextView
            android:text="140lbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv140" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="24sp" />

        <TextView
            android:text="160lbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv160" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="24sp" />

        <TextView
            android:text="180lbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv180" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="24sp" />

        <TextView
            android:text="200lbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv200" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="24sp" />

        <TextView
            android:text="220lbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv220" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textSize="24sp" />


    </LinearLayout>
</ScrollView>
